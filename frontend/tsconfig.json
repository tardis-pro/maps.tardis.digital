{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "outDir": "./dist/",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "skipLibCheck": true,
        "types": ["vite/client"],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "exclude": ["node_modules/*", "src/bits/Tardis.tsx", "e2e/*"]
}
